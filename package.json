{
  "name": "vue-slim-modal",
  "version": "0.3.0",
  "description": "Slim modal component for Vue.js",
  "license": "MIT",
  "repository": "egoist/vue-slim-modal",
  "author": {
    "name": "EGOIST",
    "email": "0x142857@gmail.com",
    "url": "github.com/egoist"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "npm run build:cjs && jest && eslint src/*.js",
    "prepublish": "npm run build",
    "build": "bili --compress",
    "build:cjs": "bili --format cjs",
    "watch": "bili --format cjs --watch",
    "play": "vbuild --dev --config vue.config.play.js",
    "play:build": "vbuild --config vue.config.play.js",
    "gh": "npm run play:build && gh-pages -d dist-play"
  },
  "files": [
    "dist"
  ],
  "main": "dist/vue-slim-modal.common.js",
  "keywords": [
    "modal",
    "vue"
  ],
  "devDependencies": {
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.1.1",
    "babel-preset-es2015": "^6.18.0",
    "bili": "^0.6.3",
    "eslint": "latest",
    "eslint-config-egoist": "latest",
    "gh-pages": "^0.11.0",
    "jest-cli": "^15.1.1",
    "raw-loader": "^0.5.1",
    "rollup-plugin-babel": "^2.6.1",
    "vbuild": "^3.0.0",
    "vue-play": "^1.0.1"
  },
  "eslintConfig": {
    "extends": "egoist/esnext",
    "rules": {
      "no-use-before-define": 0
    }
  },
  "dependencies": {
    "babel-helper-vue-jsx-merge-props": "^2.0.1",
    "object-assign": "^4.1.0"
  }
}
